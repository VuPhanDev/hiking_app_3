<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

  <item>
    <shape android:shape="rectangle">
      <solid android:color="#293E86" />
      <corners android:radius="5dp" />
    </shape>
  </item>

  <item android:id="@+id/color2" android:top="1dp">
    <shape>
      <solid android:color="#202E5C" />
      <corners android:radius="5dp" />
    </shape>
  </item>

  <item android:id="@+id/fadeColor">
    <shape>
      <corners android:radius="5dp" />
      <gradient
          android:type="radial"
          android:gradientRadius="120%p"
          android:startColor="#293E86"
          android:centerColor="#293E86"
          android:endColor="#202E5C"
          />
    </shape>
  </item>
</layer-list>
