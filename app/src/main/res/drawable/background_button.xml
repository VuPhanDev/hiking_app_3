            android:shape="rectangle" tools:ignore="RedundantNamespace">
            <solid android:color="#81878686" />
            <corners android:radius="10dp" />
        </shape>

    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" tools:ignore="RedundantNamespace">
            <solid android:color="#D9D9D9" />
            <corners android:radius="10dp" />
        </shape>

    </item>
</selector>