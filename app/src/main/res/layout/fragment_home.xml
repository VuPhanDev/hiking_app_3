<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Home"
            android:textSize="20sp"
            android:textColor="#2C2C2C"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_medium"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Let find your adventure!"
            android:textSize="18sp"
            android:textColor="#2C2C2C"
            android:fontFamily="@font/poppins_italic"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:weightSum="5"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@drawable/background_find_tab"
                >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_find"
                    android:layout_marginStart="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:textColor="#616161"
                    android:hint="Search"
                    android:background="@null"
                    android:layout_marginStart="5dp"
                    app:layout_constraintEnd_toStartOf="@+id/imageView"
                    app:layout_constraintStart_toEndOf="@+id/imageView2"
                    tools:ignore="Autofill,LabelFor,MissingConstraints" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_position"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_primary"
                    android:layout_gravity="center"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:orientation="vertical"
            android:id="@+id/layout_find"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="What you are finding?"
                android:textSize="18sp"
                android:textColor="#121D29"
                android:fontFamily="@font/poppins_medium"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >
                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Tatra Mountains"
                    android:textSize="18sp"
                    android:textColor="#121D29"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/background_border_white"
                    android:fontFamily="@font/poppins_medium"
                    />

                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USA"
                    android:textSize="18sp"
                    android:textColor="#121D29"
                    android:gravity="center"
                    android:padding="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginStart="7dp"
                    android:background="@drawable/background_border_white"
                    android:fontFamily="@font/poppins_medium"
                    />

                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="China"
                    android:textSize="18sp"
                    android:textColor="#121D29"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_marginStart="7dp"
                    android:background="@drawable/background_border_white"
                    android:fontFamily="@font/poppins_medium"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/tv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Appalachian Trail"
                    android:textSize="18sp"
                    android:textColor="#121D29"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/background_border_white"
                    android:fontFamily="@font/poppins_medium"
                    />

                <TextView
                    android:id="@+id/tv_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alcatraz"
                    android:textSize="18sp"
                    android:textColor="#121D29"
                    android:gravity="center"
                    android:padding="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginStart="7dp"
                    android:background="@drawable/background_border_white"
                    android:fontFamily="@font/poppins_medium"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Lamington National Park"
                    android:textSize="18sp"
                    android:textColor="#121D29"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/background_border_white"
                    android:fontFamily="@font/poppins_medium"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Mount Kailash"
                    android:textSize="18sp"
                    android:textColor="#121D29"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/background_border_white"
                    android:fontFamily="@font/poppins_medium"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Australia"
                    android:textSize="18sp"
                    android:textColor="#121D29"
                    android:gravity="center"
                    android:padding="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginStart="7dp"
                    android:background="@drawable/background_border_white"
                    android:fontFamily="@font/poppins_medium"
                    />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Recommend"
            android:textSize="18sp"
            android:textColor="#121D29"
            android:fontFamily="@font/poppins_medium"
            />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/background_border_white"
                    tools:ignore="UselessParent">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_pic_recommend"
                            tools:ignore="ContentDescription" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hiking"
                        android:textSize="12sp"
                        android:textColor="#F09091"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/poppins_regular"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recommend"
                        android:layout_marginStart="5dp"
                        android:textSize="13sp"
                        android:textColor="#121D29"
                        android:fontFamily="@font/poppins_medium"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/background_border_white"
                    tools:ignore="UselessParent">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_pic_recommend"
                            tools:ignore="ContentDescription" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hiking"
                        android:textSize="12sp"
                        android:textColor="#F09091"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/poppins_regular"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recommend"
                        android:layout_marginStart="5dp"
                        android:textSize="13sp"
                        android:textColor="#121D29"
                        android:fontFamily="@font/poppins_medium"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/background_border_white"
                    tools:ignore="UselessParent">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_pic_recommend"
                            tools:ignore="ContentDescription" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hiking"
                        android:textSize="12sp"
                        android:textColor="#F09091"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/poppins_regular"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recommend"
                        android:layout_marginStart="5dp"
                        android:textSize="13sp"
                        android:textColor="#121D29"
                        android:fontFamily="@font/poppins_medium"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/background_border_white"
                    tools:ignore="UselessParent">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_pic_recommend"
                            tools:ignore="ContentDescription" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hiking"
                        android:textSize="12sp"
                        android:textColor="#F09091"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/poppins_regular"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recommend"
                        android:layout_marginStart="5dp"
                        android:textSize="13sp"
                        android:textColor="#121D29"
                        android:fontFamily="@font/poppins_medium"
                        />

                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>